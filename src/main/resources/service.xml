<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<bean id="directoryService" 
		class="com.oracle_hcm.dataUploadTool.directory.impl.DirectoryServiceImpl" 
		factory-method="getInstance">
		<constructor-arg value="D://source"/>
		<constructor-arg value="D://target"/>
	</bean>
	
	<bean id="dataReader" 
		class="com.oracle_hcm.dataUploadTool.service.impl.ExcelDataReader">
		<constructor-arg ref="directoryService"/>
	</bean>
</beans>
